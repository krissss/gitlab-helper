{
  "name": "gitlab-helper-web",
  "version": "0.2.7",
  "private": true,
  "scripts": {
    "prepare": "node .husky/prepare.js",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "format:all": "prettier src/**/* --write",
    "lint:es": "eslint --cache src/**/*.{js,ts,vue} . --fix",
    "lint:style": "stylelint --cache --fix src/**/*.{vue,css,scss}"
  },
  "dependencies": {
    "@element-plus/nuxt": "^1.0.4",
    "@pinia/nuxt": "^0.4.7",
    "@tauri-apps/api": "^1.2.0",
    "@vueuse/core": "^9.13.0",
    "@vueuse/nuxt": "^9.13.0",
    "dayjs": "^1.11.7",
    "nuxt-lodash": "^2.4.1",
    "pinia": "^2.0.33",
    "semver": "^7.4.0",
    "vue-slicksort": "^2.0.5"
  },
  "devDependencies": {
    "@actions/github": "^5.1.1",
    "@nuxt/devtools": "^0.3.1",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@tauri-apps/cli": "^1.2.3",
    "@types/node": "^18.15.11",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "node-fetch": "^3.3.1",
    "nuxt": "^3.3.3",
    "prettier": "^2.8.7",
    "sass": "^1.61.0",
    "stylelint": "^15.3.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^7.0.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
